{
  "name": "advent-of-node",
  "version": "1.0.0",
  "description": "Node solutions for Advent of Code",
  "main": "index.js",
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "test": "run-s build test:*",
    "test:lint": "tslint --project .",
    "test:examples": "mocha -s 0 --require ts-node/register test/examples.*.spec.ts --exit",
    "test:answers": "mocha -s 0 --require ts-node/register test/answers.*.spec.ts --exit",
    "start": "node --max_old_space_size=8192 dist/start.js",
    "local:advent": "nodemon --inspect --max_old_space_size=8192 dist/start.js",
    "local": "run-p local:*",
    "clean": "trash dist tsconfig.tsbuildinfo",
    "docs": "typedoc --out docs ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevansimpson/advent-of-node.git"
  },
  "author": "kevansimpson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kevansimpson/advent-of-node/issues"
  },
  "homepage": "https://github.com/kevansimpson/advent-of-node#readme",
  "dependencies": {
    "colors": "^1.3.3",
    "fast-levenshtein": "^2.0.6"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.12",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typedoc-plugin-external-module-name": "^2.1.0",
    "typescript": "^3.5.2"
  }
}
